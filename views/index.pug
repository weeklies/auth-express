extends layout

block content
    h1= title

    if currentUser
        h5 Welcome, #[strong= currentUser.username].
    else
        h5 Please log in.
        form(action="/log-in" method="POST")
            label(for="username") Username
            input.form-control(required name="username" placeholder="username" type="text" )
            label(for="password") Password
            input.form-control(required name="password" type="password")
            button.btn.btn-primary Log In
